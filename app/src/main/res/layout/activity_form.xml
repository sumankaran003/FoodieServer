<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"

tools:context="in.karan.suman.foodkaserver.FormActivity">

<TextView
    android:id="@+id/text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Registration Form"
    android:textSize="25dp"
    android:textColor="@color/colorAccent"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    />

<EditText

    android:id="@+id/roll_no"
    android:layout_marginTop="50dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/text"
    android:layout_centerHorizontal="true"
    android:backgroundTint="@color/colorAccent"
    android:hint="Roll No"
    android:textColorHint="@color/colorAccent"/>
<EditText
    android:id="@+id/Name"
    android:layout_marginTop="15dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/roll_no"
    android:layout_centerHorizontal="true"
    android:backgroundTint="@color/colorAccent"
    android:hint="Name"
    android:textColorHint="@color/colorAccent"/>
<TextView
    android:id="@+id/gen"
    android:layout_marginTop="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Gender"
    android:textSize="15dp"
    android:textColor="@color/colorAccent"
    android:layout_alignLeft="@id/Name"
    android:layout_below="@id/Name"/>

<RadioGroup
    android:id="@+id/rg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@id/Name"
    android:layout_below="@id/gen">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textSize="17dp"

        android:textColor="#000000"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:textSize="17dp"

        android:textColor="#000000"/>
</RadioGroup>

<TextView
    android:id="@+id/hub"
    android:layout_marginTop="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hobbie"
    android:textSize="15dp"
    android:textColor="@color/colorAccent"
    android:layout_alignLeft="@id/Name"
    android:layout_below="@id/rg"/>


<CheckBox
    android:id="@+id/paint"
    android:layout_alignLeft="@id/Name"
    android:layout_below="@id/hub"
    android:text="Painting"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<CheckBox
    android:id="@+id/play"
    android:layout_alignLeft="@id/Name"
    android:text="Playing"
    android:layout_below="@id/paint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<CheckBox
    android:id="@+id/kick"
    android:layout_alignLeft="@id/Name"
    android:text="Kicking"
    android:layout_below="@+id/play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />


<LinearLayout
    android:padding="5dp"
    android:layout_marginBottom="5dp"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:backgroundTint="@color/colorAccent"
        android:layout_weight="1"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:backgroundTint="@color/colorPrimary"
        android:layout_weight="1"
        />

</LinearLayout>

</RelativeLayout>
